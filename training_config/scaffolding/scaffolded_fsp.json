{
  "dataset_reader": {
    "type": "fn_full",
    "max_span_width": 15,
    "data_path": "data/fndata-1.5/",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "dataset_reader_aux": {
    "type": "syntactic_constit",
    "max_span_width": 15,
    "label_namespace": "constit_labels",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "data/fndata-1.5/train/fulltext/",
  "train_data_path_aux": "data/conll-formatted-ontonotes-5.0-12/conll-formatted-ontonotes-5.0/data/train/",
  "mixing_ratio": 1.0,
  "validation_data_path": "data/fndata-1.5/development/fulltext/",
  "test_data_path": "data/fndata-1.5/test/fulltext/",
  "model": {
    "type": "scaffolded_frame_srl",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "pretrained_file": "data/glove.840B.300d.txt.gz",
        "trainable": false
      }
    },
    "initializer": [
      [".*_projection_layer.*weight", {"type": "orthogonal"}],
      [".*_scorer.*weight", {"type": "xavier_normal"}],
      [".*_feedforward.*weight", {"type": "xavier_normal"}],
      [".*_embedding.*weight", {"type": "xavier_normal"}]
    ],
    "stacked_encoder": {
      "type": "alternating_highway_lstm_cuda",
      "input_size": 400,
      "hidden_size": 300,
      "num_layers": 6,
      "recurrent_dropout_probability": 0.1
    },
    "span_feedforward": {
      "input_dim": 909,
      "num_layers": 2,
      "hidden_dims": 150,
      "activations": "relu",
      "dropout": 0.2
    },
    "binary_feature_dim": 100,
    "max_span_width": 15,
    "feature_size": 2,
    "distance_feature_size": 5,
    "fast_mode": true,
    "loss_type": "hamming",
    "ontology_path": "data/fndata-1.5/"
  },
  "iterator": {
    "type": "bucket",
    "biggest_batch_first": true,
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ],
    "batch_size": 32
  },
  "iterator_aux": {
    "type": "bucket",
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ],
    "batch_size": 32
  },
  "trainer": {
    "num_epochs": 250,
    "grad_clipping": 1.0,
    "patience": 20,
    "validation_metric": "+f1-measure-overall",
    "cuda_device": 0,
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}