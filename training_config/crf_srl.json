{
  "dataset_reader": {
    "type": "crf_srl",
    "max_span_width": 13,
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "data/conll-formatted-ontonotes-5.0-12/conll-formatted-ontonotes-5.0/data/train/",
  "validation_data_path": "data/conll-formatted-ontonotes-5.0-12/conll-formatted-ontonotes-5.0/data/development/",
  "model": {
    "type": "crf_srl",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "pretrained_file": "data/glove.6B.100d.txt.gz",
        "trainable": true
      }
    },
    "initializer": [
      [".*_projection_layer.*weight", {"type": "orthogonal"}]
    ],
    "stacked_encoder": {
      "type": "alternating_highway_lstm_cuda",
      "input_size": 200,
      "hidden_size": 300,
      "num_layers": 6,
      "recurrent_dropout_probability": 0.1
    },
    "span_feedforward": {
      "input_dim": 909,
      "num_layers": 2,
      "hidden_dims": 150,
      "activations": "relu",
      "dropout": 0.2
    },
    "binary_feature_dim": 100,
    "max_span_width": 13,
    "feature_size": 2,
    "loss_type": "hamming"
  },
  "iterator": {
    "type": "bucket",
    "biggest_batch_first": true,
    "sorting_keys": [
      [
        "tokens",
        "num_tokens"
      ]
    ],
    "batch_size": 32
  },
  "trainer": {
    "num_epochs": 100,
    "grad_clipping": 1.0,
    "patience": 20,
    "validation_metric": "+f1-measure-overall",
    "cuda_device": 0,
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}
